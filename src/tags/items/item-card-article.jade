item-card-article.mb12
  a(href='{url}').wrap-item
    div.wrap-img.f.fh
      img(src='{content.topImg}')
    div.wrap-card-content.line-clamp-1.py14
      span.date.mb14 {date}
      span.title.line-clamp-1.mb8 {content.title}
      span.sub-title.line-clamp-1.mb14 {content.subTitle}
      div.wrap-tags
        atom-tag(each='{tag in content.tags}' label='{tag}')
  
  style(scoped, type='less').
    :scope {
      width: 49%;
      background: #FFF;
      cursor: pointer;
      .wrap-img {
        width: 100%;
        height: 200px;
        overflow: hidden;
        img {
          min-height: 100%;
          object-fit: cover;
        }
      }
      .wrap-card-content {
        width: 94%;
        margin: 0 auto;
        span {
          display: block;
        }
        .date {
          font-size: 14px;
          font-weight: lighter;
          color: #999;
        }
        .title {
          font-size: 20px;
          font-weight: bold;
        }
        .sub-title {
          font-size: 14px;
        }
        .wrap-tags {
          overflow: hidden;
        }
      }

      @media only screen and (max-width : 600px) {
        width: 100%;
      }
    }

  script.

    var self = this;

    this.content = opts.content;
    this.date = moment(this.content.publishDate).format('MMMM Do YYYY');
    this.url = `/#article/${this.content.id}`;


    


